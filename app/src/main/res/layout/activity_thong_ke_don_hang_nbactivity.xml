<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ThongKeDonHangActivity">

    <!-- Nội dung chính của hoạt động -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/linearlayout">

            <!-- Toolbar với tiêu đề và background -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#388E3C"
                android:title="@string/thong_ke_don_hang"
                android:titleTextColor="#FFFFFF"
                app:titleTextColor="@color/white" />

            <!-- Thống kê tổng quan -->
            <TextView
                android:id="@+id/tvTotalOrders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng số đơn: 0"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDeliveredOrders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đơn đã giao: 0"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvCancelledOrders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đơn đã hủy: 0"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvUnconfirmedOrders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đơn chưa xác nhận: 0"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvTongTienDaGiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng tiền những đơn giao: 0"
                android:textSize="16sp" />

            <!-- RecyclerView hiển thị danh sách đơn hàng -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewOrders"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>
    </FrameLayout>

    <!-- NavigationView (Menu thanh điều hướng) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/imgthuoc"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="2"
                android:src="@drawable/not_found" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvtenthuoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên thuốc "
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvloai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loại: "
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvcongdung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Công dụng "
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tvslht"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số lượng hiện tại"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tvsldb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số lượng đã bán "
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tvdongia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đơn giá sản phẩm "
                    android:textAlignment="center"
                    android:textColor="#FF0000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtsoluongsp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="10dp"/>  <!-- Thêm khoảng cách bên phải của TextView -->

            <!-- Nút Cộng -->
            <Button
                android:id="@+id/btnthem"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:backgroundTint="#8BC34A"
                android:background="@drawable/circle_button"
                android:text="+"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                />  <!-- Thêm khoảng cách bên trái của nút Cộng -->

            <!-- Nút Trừ -->
            <Button
                android:id="@+id/btnbot"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:backgroundTint="#8BC34A"
                android:text="-"
                android:background="@drawable/circle_button"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="5dp" />  <!-- Thêm khoảng cách bên trái của nút Trừ -->

        </LinearLayout>


        <TextView
            android:id="@+id/txttongtien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền:  "
            android:textStyle="bold"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/btnmua"
            android:layout_width="115dp"
            android:layout_marginStart="110dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#E91E1E"
            android:text="Mua ngay"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
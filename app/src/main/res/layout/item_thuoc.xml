<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Image of the medicine -->
        <ImageView
            android:id="@+id/imageThuoc"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop" />

        <!-- Name and Purpose -->
        <TextView
            android:id="@+id/textTenthuoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:text="Tên Thuốc"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textCongdung"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Công dụng"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <!-- Details -->
        <TextView
            android:id="@+id/textSoluong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:padding="5dp"
            android:text="Số lượng hiện tại: 0 | Số lượng đã bán: 0"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textDongia"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:padding="5dp"
            android:text="Đơn giá: 0.0 VND"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <!-- Edit Button -->
       <LinearLayout
           android:layout_gravity="end"
           android:orientation="horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/buttonEdit"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_gravity="end"
               android:layout_marginTop="8dp"
               android:contentDescription="Edit"
               android:src="@drawable/ic_edit" />
           <ImageView
               android:layout_marginHorizontal="10dp"
               android:id="@+id/buttonDelete"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_gravity="end"
               android:layout_marginTop="8dp"
               android:contentDescription="Edit"
               android:src="@drawable/baseline_delete_24" />
       </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>